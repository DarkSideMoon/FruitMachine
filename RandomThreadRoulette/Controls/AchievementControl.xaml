<UserControl x:Class="RandomThreadRoulette.Controls.AchievementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Height="110" Width="110">
    <StackPanel >
        <Image Source="{Binding ImageBytes}" Height="90"></Image>
        <TextBlock Text="{Binding SmallDescription}" TextAlignment="Center" Background="Transparent" 
                   FontWeight="Medium" Foreground="#FF654070" FontSize="14"></TextBlock>
    </StackPanel>
</UserControl>
