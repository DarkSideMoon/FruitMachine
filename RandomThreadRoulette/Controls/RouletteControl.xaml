<UserControl x:Class="RandomThreadRoulette.Controls.RouletteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <StackPanel x:Name="MainPanel" Margin="5">
        <Image x:Name="image" HorizontalAlignment="Left" Height="130" VerticalAlignment="Top" Width="140" Source="{Binding Image}"/>
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="14" Foreground="#FF73C573" FontWeight="Medium" TextAlignment="Center"/>
            <TextBlock Text="{Binding Number}" FontSize="14" Foreground="#FF737BBB" FontWeight="Medium" TextAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
