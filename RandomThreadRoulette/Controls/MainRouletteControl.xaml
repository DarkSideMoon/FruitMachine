<UserControl x:Class="RandomThreadRoulette.Controls.MainRouletteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:roulette="clr-namespace:RandomThreadRoulette.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Border CornerRadius="10" BorderBrush="#FFDEDBFF" BorderThickness="2">
            <StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <roulette:RouletteControl/>
                    <roulette:RouletteControl/>
                    <roulette:RouletteControl/>
                </StackPanel>
                
                <StackPanel Margin="10,0,10,0">
                    <TextBlock Text="Count numbers" TextAlignment="Center" FontSize="16" FontWeight="Medium" Foreground="DarkCyan" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
